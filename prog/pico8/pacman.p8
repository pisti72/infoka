x=2; y=2; s=1; t=0; pont=0
function _draw()
 cls(); map()
 xp=x; yp=y; g=t%4==0
 if(btn(➡️) and g)xp+=1
 if(btn(⬅️) and g)xp-=1
 if(btn(⬇️) and g)yp+=1
 if(btn(⬆️) and g)yp-=1
 tile=mget(xp,yp)
 if tile~=3 then
  x=xp; y=yp
  if tile>3 then
   mset(xp,yp,0); pont+=10
  end
 end
 s=(x+y)%2+1
 spr(s,x*8,y*8)
 print(pont)
 t+=1
end
